@using Microsoft.AspNetCore.Identity
@using Optimus.Data.Entities
@using OptimusSite.Extensions
@inject SignInManager<OptimusUser> SignInManager
@inject UserManager<OptimusUser> UserManager

<ul class="navbar-nav">
	@if (SignInManager.IsSignedIn(User))
	{

		var displayName = User.Claims.FirstOrDefault(x => x.Type.Equals("DisplayName")); ;

		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
				@if (displayName != null)
				{
					<span>Hello @displayName.Value</span>
				}
				else
				{
					<span>Hello @User.Identity.Name</span>
				}
			</a>
		</li>

		<li class="nav-item">
			<form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
				<button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
			</form>
		</li>

	}
	else
	{
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
		</li>
	}
</ul>